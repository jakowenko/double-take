    // SCSS intellisense
    // https://github.com/mrmlnc/vscode-scss
    "mrmlnc.vscode-scss",

    // Vue Code Snippets
    // https://github.com/sdras/vue-vscode-snippets
    "sdras.vue-vscode-snippets"
